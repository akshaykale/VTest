<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Signup"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:background="#ff5900"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:text="TextView" />

    <EditText
        android:id="@+id/et_name_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="20dp" android:hint="Name"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_dep_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" android:hint="Department"
        android:ems="10" />

    <EditText
        android:id="@+id/et_roll_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" android:hint="Roll No"
        android:ems="10" />

    <Button
        android:id="@+id/bt_signup_s"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:onClick="signupStudent"
        android:text="SugnUp" />

</LinearLayout>
